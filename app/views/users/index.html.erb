<div class="container">
  <div class="margin-top"></div>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <ul class="list-group">
          <li class="list-group-item">
            <p><%= user.created_at.to_s[0..18] %></p>
          </li>
          <%= link_to user_path(user) do %>
            <li class="list-group-item flex">
              <strong><%= user.phone_number %></strong>
              <!-- TODO overrider le text-decoration au hover pour le label -->
              <div class="no-decoration"><p><span class="label label-default"><%= user.messages.where(sender: true).count.to_s + " messages (#{user.messages.where(sender: true).count.to_s} envoyés, #{user.messages.where(sender: false).count.to_s} reçus)" %></span></p></div>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
